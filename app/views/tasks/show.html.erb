
<div class="container">
    <h1><%= @task.title %></h1>

    <h2><%= @task.details %></h2>
    <% if (@task.completed) %>
    
    <p> <input type="checkbox" checked> completed</p>
    <% else %>
    <p><input type="checkbox"> Not Completed</p>
    <% end %>
    <p></p>
    <%= link_to "edit", edit_task_path(@task)  %>
    <p></p>
    <%= link_to "Delete", 
            task_path(@task), 
            method: :delete, 
            data: {confirm: "Are you sur?"} %>

</div>